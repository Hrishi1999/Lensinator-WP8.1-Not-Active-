<Page
    x:Class="Lensinator.nots"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lensinator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <Grid Height="29" Margin="0,-30,0,0" VerticalAlignment="Top" Background="#FF303F9F"/>
        <Grid Background="#FF3F51B5" Margin="0,-2,0,0" Height="66" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="271*"/>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="108*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="textBlock" Margin="10,12,10,14" TextWrapping="Wrap" Text="Notification" FontSize="30.667" FontFamily="DengXian" Grid.ColumnSpan="3"/>
            <TextBlock x:Name="textBlock_Copy" Margin="10,80,10,-54" TextWrapping="Wrap" Text="Message from developers." FontSize="26.667" FontFamily="DengXian" Grid.ColumnSpan="3" Foreground="#FF344397"/>

        </Grid>
        <TextBox x:Name="nts" Margin="10,128,10,10" TextWrapping="Wrap" VerticalAlignment="Stretch" PlaceholderText="..." BorderBrush="#FF3F51B5" IsReadOnly="True"/>

    </Grid>
</Page>
