<Page
    x:Class="Lensinator.feedback"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lensinator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar Background="#1E88E5">
            <AppBarButton x:ConnectionId='1' Label="Send" Icon="Send"                           />
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Margin="0,-26.667,0,-0.333" Background="White">
        <TextBlock x:Name="textBlock" Margin="13,19,51,0" TextWrapping="Wrap" Text="Feedback" VerticalAlignment="Top" FontSize="33.333" FontFamily="DengXian" Foreground="#FF1E88E5"/>
        <ScrollViewer Margin="12,81,10,48" VerticalScrollMode="Enabled">
            <Grid>
                <TextBlock x:Name="textBlock_Copy1" Margin="0,10,41,0" TextWrapping="Wrap" Text="Subject :" VerticalAlignment="Top" FontSize="20" FontFamily="DengXian" Foreground="#FF1E88E5"/>
                <TextBox x:Name="sub" Margin="0,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="#FF1E88E5" Foreground="#FF1E88E5" PlaceholderText="Suggestion/Bug/Else" Height="64"/>
                <TextBlock x:Name="textBlock_Copy3" Margin="0,109,-1,0" TextWrapping="Wrap" Text="What's your issue/suggestion or else?" VerticalAlignment="Top" FontSize="20" FontFamily="DengXian" Foreground="#FF1E88E5"/>
                <TextBox x:Name="sub1" Margin="0,139,-1,0" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="#FF1E88E5" Height="328" Foreground="#FF1E88E5"/>

            </Grid>
        </ScrollViewer>

    </Grid>
</Page>

