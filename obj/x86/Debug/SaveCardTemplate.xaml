<UserControl
    x:Class="Lensinator.SaveCardTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lensinator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="gd" Background="#FFF7F7F7">
        <Image x:Name="image" HorizontalAlignment="Left" Height="131" Margin="10,10,0,0" VerticalAlignment="Top" Width="138" Source="Assets/SmallLogo.png" Stretch="UniformToFill"/>
        <TextBlock x:Name="pname" Margin="157,19,10,0" TextWrapping="Wrap" Text="{Binding nameofp, ElementName = SaveCardTemplate, Mode=TwoWay}" VerticalAlignment="Top" Foreground="Black" FontFamily="DengXian" FontSize="20"/>
        <TextBlock x:Name="pnom" Margin="157,54,10,0" TextWrapping="Wrap" Text="{Binding phnop, ElementName = SaveCardTemplate, Mode=TwoWay}" VerticalAlignment="Top" Foreground="Black" FontFamily="DengXian" FontSize="20"/>
        <TextBlock x:Name="pem" Margin="157,89,10,0" TextWrapping="Wrap" Text="{Binding Ema, ElementName = SaveCardTemplate, Mode=TwoWay}" VerticalAlignment="Top" Foreground="Black" FontFamily="DengXian" FontSize="20"/>
        <Button x:ConnectionId='1' x:Name="button_Copy" Content="Open Card" HorizontalAlignment="Stretch" Margin="10,227,10,14" VerticalAlignment="Stretch" BorderBrush="#FF43A047" Foreground="White" Background="#FF43A047"                          />
    </Grid>
</UserControl>

